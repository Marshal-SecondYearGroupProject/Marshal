{
    "table": "user",
    "username": {
        "required": true,
        "min": 4,
        "max": 40,
        "unique": true,
        "format": "/^(?!_)[A-Za-z0-9]+(?:_[A-Za-z0-9]+)*$/"
    },
    "first_name": {
        "required": true,
        "min": 4,
        "max": 40,
        "format": "/^(?!_)[A-Za-z0-9]+(?:_[A-Za-z0-9]+)*$/"
    },
    "last_name": {
        "required": true,
        "min": 4,
        "max": 40,
        "format": "/^(?!_)[A-Za-z0-9]+(?:_[A-Za-z0-9]+)*$/"
    },
    "email_address": {
        "required": true,
        "unique": true,
        "email": true
    },
    "password": {
        "required": true,
        "min": 8
    },
    "password_re_enter": {
        "required": true,
        "min": 8,
        "match": "password"
    }
}