{
    "table": "user",
    "username": {
        "required": true,
        "min": 4,
        "max": 40,
        "unique": true
    },
    "first_name": {
        "required": true,
        "min": 4,
        "max": 40
    },
    "last_name": {
        "required": true,
        "min": 4,
        "max": 40
    },
    "email_address": {
        "required": true,
        "unique": true,
        "email": true
    },
    "password": {
        "required": true,
        "min": 8
    },
    "password_re_enter": {
        "required": true,
        "min": 8,
        "match": "password"
    },
    "phone_number": {
        "required": true,
        "format": "/^[(][+][\\d]{2}[)][\\d]{2}[-][\\d]{4}[-][\\d]{3}$"
    }
}